extends layout

block content
    link(rel='stylesheet' href='./stylesheets/index.css')
    div#header.text-center
      h1 My Grade Report
    div#subhead.text-center
      p The easiest way to keep track of your grades!
    div.jumbotron.text-center#signup
      form.navbar-form.navbar-right(method='post' action='/login-attempt')
          div.form-group
              input.form-control(name='login_uname' type='text' placeholder='username')
              br
              br
              input.form-control(name='login_password' type='password' placeholder='password')
              br
              br
              button.btn.btn-default(type='submit' href='/myreport') Login
              br
              br
        div.btn-group#buttons
          a.btn.btn-primary(type='button' href='/about') Explore
          a.btn.btn-success(type='button' href='/signup') Sign Up
    nav.navbar.navbar-default.navbar-fixed-bottom#footer
      div.containe
